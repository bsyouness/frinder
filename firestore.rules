rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection
    match /users/{userId} {
      // Users can read their own data
      allow read: if request.auth != null && request.auth.uid == userId;

      // Users can write their own data
      allow write: if request.auth != null && request.auth.uid == userId;

      // Allow authenticated users to search for other users (for friend requests)
      // This is necessary for the friend search functionality
      allow read: if request.auth != null;

      // Allow friends to read each other's location
      allow read: if request.auth != null &&
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        request.auth.uid in resource.data.friendIds;
    }
  }
}
